<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="mod/recitcahiercanada/db" VERSION="20190303" COMMENT="XMLDB file for URL module"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="recitcahiercanada" COMMENT="Main table for the RecitCahierCanada (course module)">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="course" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="intro" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="introformat" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="display" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="fkcourse" TYPE="foreign" FIELDS="course" REFTABLE="course" REFFIELDS ="id"/>
      </KEYS>
    </TABLE>

     <TABLE NAME="recitcc_cm_notes" COMMENT="It keeps the course modules which have notes to be taken by the users">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="ccid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Cahier Canada Id"/>
        <FIELD NAME="cmid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Course Module Id"/>
        <FIELD NAME="title" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="slot" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="templatenote" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="suggestednote" TYPE="text" NOTNULL="false" SEQUENCE="false"/> 
        <FIELD NAME="teachertip" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="lastupdate" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="fkccid" TYPE="foreign" FIELDS="ccid" REFTABLE="recitcahiercanada" REFFIELDS ="id"/>
        <KEY NAME="fkcmid" TYPE="foreign" FIELDS="cmid" REFTABLE="course_modules" REFFIELDS ="id"/>
      </KEYS>
    </TABLE>

    <TABLE NAME="recitcc_user_notes" COMMENT="It keeps the personal notes taken by the users">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="cccmid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Cahier Canada Course Module Id"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="note" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="feedback" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="grade" TYPE="float" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="lastupdate" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="fkcccm" TYPE="foreign" FIELDS="cccmid" REFTABLE="recitcc_cm_notes" REFFIELDS ="id"/>
        <KEY NAME="fkuser" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS ="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="uniquenote" UNIQUE="true" FIELDS="cccmid,userid"/>
      </INDEXES>
    </TABLE>

  </TABLES>
</XMLDB>